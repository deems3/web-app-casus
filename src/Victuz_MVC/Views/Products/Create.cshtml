@model Victuz_MVC.ViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Product aanmaken</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beschrijving</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Prijs</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCategoryIds" class="control-label">Categorieen</label>
                <select asp-for="SelectedCategoryIds" multiple="multiple" asp-items="ViewBag.Categories" class="form-control"></select>
                <span asp-validation-for="SelectedCategoryIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Afbeelding</label>
                <input name="file" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Voeg nieuw product toe" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn">Terug naar lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
