@using Victuz_MVC.Enums
@model Victuz_MVC.ViewModels.CreateActivityViewModel

@{
    ViewData["Title"] = "Voorstellen";
}

<h1>Stel een activiteit voor</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Suggest" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limit" class="control-label"></label>
                <input asp-for="Limit" class="form-control" />
                <span asp-validation-for="Limit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="HostIds" class="control-label">Hosts</label>
                <select asp-for="HostIds" asp-items="ViewBag.Hosts" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="ActivityCategoryId" class="control-label">Category</label>
                <select asp-for="ActivityCategoryId" asp-items="ViewBag.ActivityCategoryId" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Afbeelding</label>
                <input name="file" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Bevestig" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
