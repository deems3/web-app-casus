@model Victuz_MVC.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h1>Uitschrijven</h1>

<h3>Weet je zeker dat je je wilt uitschrijven?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Inschrijftijd
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrolledAt)
        </dd>
        <dt class = "col-sm-2">
            Account-Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Account.Id)
        </dd>
        <dt class = "col-sm-2">
            Activiteit
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Activity.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Uitschrijven" class="btn-delete" /> |
        <a asp-action="Index" class="btn">Terug naar lijst</a>
    </form>
</div>
